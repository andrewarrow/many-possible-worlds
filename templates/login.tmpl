{{template "_header" .}}

<main>
  <div class="container">

    <div class="good-links">
      <h1><a href="/">many.pw</a></h1>
    </div>
    <p class="lead">Many Possible Worlds!</p>

    <div>
      <form method="POST" action="/login">
              <p>
        <input type="text" name="email" placeholder="email"/>
              </p>
              <p>
        <input type="password" name="password" placeholder="password"/>
              </p>
          <p>
            <input type="checkbox" id="cookies1" name="cookies" value="1">
            <label for="cookies1">I agree to cookie use.</label>
          </p>
              <p>
        <input type="submit" value="Login"/>
              </p>
      </form>
    </div>
    
    <div>&nbsp;</div>

    <div>
      <form method="POST" action="/register">
              <p>
        <input type="text" name="email" placeholder="email"/>
              </p>
          <p>
            <input type="checkbox" id="cookies2" name="cookies" value="1">
            <label for="cookies2">I agree to cookie use.</label>
          </p>
              <p>
        <input type="submit" value="Create Account"/>
              </p>
      </form>
    </div>


